@model Damagedproducts



<div class="modal" tabindex="-1" id="demag">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> تعريف منتج تالف   </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="CreateDamage" method="post">
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="productSelect" class="form-label">اسم المنتج </label>
                            <select class="form-select" id="productSelect" asp-for="Products_Id">
                                @foreach (var items in ViewBag.Product)
                                {
                                    <option value="@items.Id"> @items.Name</option>

                                }
                            </select>
                        </div>
                        <div class="col-sm-6">
                            <label for="s" class="form-label"> كميه المنتج</label>
                            <input type="number" asp-for="Qty" class="form-control" id="s" />
                            <span class="text-danger" asp-validation-for="Qty"></span>
                        </div>

                    </div>
                    <div class="row mt-4">
                        <div class="col text-center">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء الأمر </button>
                            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">حفظ</button>
                        </div>
                    </div>
                </form>
              
            </div>

        </div>

    </div>
</div>


<div class="text-center">
   

    <div class="container">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h3 class="alert alert-success text-center">إنشاء منتج تالف </h3>
                        <div class="row">
                            <div class="col">
                                <button class="btn btn-success" onclick="AddNewDemag()">  <i class="fs-4 bi-cart-plus p-2"></i>  تعريف منتج تالف </button>
                            </div>
                        </div>
                        
                        

                    </div>
                </div>
            </div>
        </div>


        <div class="card">

            <div class="card-body">
                <table class="table  table-bordered text-center">
                    <thead class=" table-success">
                        <tr>
                            <th>
                                رقم التلف
                            </th>
                            <th>
                                اسم المنتج
                            </th>
                            <th>
                                لون المنتج
                            </th>
                            <th>
                                كميه المنتج
                            </th>
                           

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var items in ViewBag.ProductD)
                        {

                            <tr>
                                <td> @items.id </td>
                                <td> @items.name </td>
                                <td> @items.color </td>
                                <td> @items.qty </td>
                              
                            </tr>
                        }
                    </tbody>
                </table>
               

            </div>
        </div>
    </div>

</div>